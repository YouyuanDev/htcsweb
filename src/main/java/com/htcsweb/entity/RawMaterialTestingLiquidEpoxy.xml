<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.htcsweb.dao.RawMaterialTestingLiquidEpoxyDao">

    <insert id="addRawMaterialTestEpoxy" parameterType="com.htcsweb.entity.RawMaterialTestingLiquidEpoxy">
       INSERT INTO raw_material_testing_liquid_epoxy(operator_no,project_no,operation_time,sample_no,pot_life,viscosity,result,upload_files,remark) VALUES (#{operator_no},#{project_no},#{operation_time},#{sample_no},#{pot_life},#{viscosity},#{result},#{upload_files},#{remark})
    </insert>
    <delete id="delRawMaterialTestEpoxy">
        delete from raw_material_testing_liquid_epoxy WHERE
        <foreach collection="array" item="item" open="id in (" separator="," close=")">
           #{item}
        </foreach>
    </delete>

    <update id="updateRawMaterialTestEpoxy" parameterType="com.htcsweb.entity.RawMaterialTestingLiquidEpoxy">
       UPDATE raw_material_testing_liquid_epoxy set operator_no=#{operator_no},project_no=#{project_no},operation_time=#{operation_time},sample_no=#{sample_no},pot_life=#{pot_life},viscosity=#{viscosity},result=#{result},upload_files=#{upload_files},remark=#{remark} where id=#{id}
    </update>


    <select id="getNewAllByLike" resultType="map">
        Select pro.project_name,o.*
        from raw_material_testing_liquid_epoxy o
        left join project_info pro on o.project_no=pro.project_no
        <where>
            <if test="project_no!=null and project_no!=''">
                AND o.project_no LIKE CONCAT('%',#{project_no},'%')
            </if>
            <if test="operator_no!=null and operator_no!=''">
                AND o.operator_no LIKE CONCAT('%',#{operator_no},'%')
            </if>
            <if test="begin_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')>=DATE_FORMAT(#{begin_time},'%Y-%m-%d 00:00:00')]]>
            </if>
            <if test="end_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')<=DATE_FORMAT(#{end_time},'%Y-%m-%d 23:59:59')]]>
            </if>
        </where>
        ORDER BY o.id DESC
        limit #{skip},#{take}
    </select>

    <select id="getCountNewAllByLike" resultType="int">
        select count(*) from raw_material_testing_liquid_epoxy o
        left join project_info pro on o.project_no=pro.project_no
        <where>
            <if test="project_no!=null and project_no!=''">
                AND o.project_no LIKE CONCAT('%',#{project_no},'%')
            </if>
            <if test="operator_no!=null and operator_no!=''">
                AND o.operator_no LIKE CONCAT('%',#{operator_no},'%')
            </if>
            <if test="begin_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')>=DATE_FORMAT(#{begin_time},'%Y-%m-%d 00:00:00')]]>
            </if>
            <if test="end_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')<=DATE_FORMAT(#{end_time},'%Y-%m-%d 23:59:59')]]>
            </if>
        </where>
    </select>

</mapper>