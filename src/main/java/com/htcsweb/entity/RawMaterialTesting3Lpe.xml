<mapper namespace="com.htcsweb.dao.RawMaterialTesting3LpeDao">

    <insert id="addRawMaterialTest3Lpe" parameterType="com.htcsweb.entity.RawMaterialTesting3Lpe">
      INSERT INTO raw_material_testing_3lpe(operator_no,project_no,operation_time,sample_no,epoxy_raw_material,epoxy_batch_no,adhesion_raw_material,adhesion_batch_no,polyethylene_raw_material,polyethylene_batch_no,epoxy_cure_time,epoxy_gel_time,epoxy_moisture_content,epoxy_particle_size_150um,epoxy_particle_size_250um,epoxy_density,epoxy_thermal_characteristics,adhesion_flow_rate,polyethylene_flow_rate,result,upload_files,remark) VALUES (#{operator_no},#{project_no},#{operation_time},#{sample_no},#{epoxy_raw_material},#{epoxy_batch_no},#{adhesion_raw_material},#{adhesion_batch_no},#{polyethylene_raw_material},#{polyethylene_batch_no},#{epoxy_cure_time},#{epoxy_gel_time},#{epoxy_moisture_content},#{epoxy_particle_size_150um},#{epoxy_particle_size_250um},#{epoxy_density},#{epoxy_thermal_characteristics},#{adhesion_flow_rate},#{polyethylene_flow_rate},#{result},#{upload_files},#{remark})
    </insert>
    <delete id="delRawMaterialTest3Lpe">
        delete from raw_material_testing_3lpe WHERE
        <foreach collection="array" item="item" open="id in (" separator="," close=")">
           #{item}
        </foreach>
    </delete>

    <update id="updateRawMaterialTest3Lpe" parameterType="com.htcsweb.entity.RawMaterialTesting3Lpe">
        UPDATE raw_material_testing_3lpe set operator_no=#{operator_no},project_no=#{project_no},operation_time=#{operation_time},sample_no=#{sample_no},epoxy_raw_material=#{epoxy_raw_material},epoxy_batch_no=#{epoxy_batch_no},adhesion_raw_material=#{adhesion_raw_material},adhesion_batch_no=#{adhesion_batch_no},polyethylene_raw_material=#{polyethylene_raw_material},polyethylene_batch_no=#{polyethylene_batch_no},epoxy_cure_time=#{epoxy_cure_time},epoxy_gel_time=#{epoxy_gel_time},epoxy_moisture_content=#{epoxy_moisture_content},epoxy_particle_size_150um=#{epoxy_particle_size_150um},epoxy_particle_size_250um=#{epoxy_particle_size_250um},epoxy_density=#{epoxy_density},epoxy_thermal_characteristics=#{epoxy_thermal_characteristics},adhesion_flow_rate=#{adhesion_flow_rate},polyethylene_flow_rate=#{polyethylene_flow_rate},result=#{result},upload_files=#{upload_files},remark=#{remark} where id=#{id}
    </update>


    <select id="getNewAllByLike" resultType="map">
        Select pro.project_name,o.*
        from raw_material_testing_3lpe o
        left join project_info pro on o.project_no=pro.project_no
        <where>
            <if test="project_no!=null and project_no!=''">
                AND o.project_no LIKE CONCAT('%',#{project_no},'%')
            </if>
            <if test="operator_no!=null and operator_no!=''">
                AND o.operator_no LIKE CONCAT('%',#{operator_no},'%')
            </if>
            <if test="begin_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')>=DATE_FORMAT(#{begin_time},'%Y-%m-%d 00:00:00')]]>
            </if>
            <if test="end_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')<=DATE_FORMAT(#{end_time},'%Y-%m-%d 23:59:59')]]>
            </if>
        </where>
        ORDER BY o.id DESC
        limit #{skip},#{take}
    </select>



    <select id="getCountNewAllByLike" resultType="int">
        select count(*) from raw_material_testing_3lpe o
        left join project_info pro on o.project_no=pro.project_no
        <where>
            <if test="project_no!=null and project_no!=''">
                AND o.project_no LIKE CONCAT('%',#{project_no},'%')
            </if>
            <if test="operator_no!=null and operator_no!=''">
                AND o.operator_no LIKE CONCAT('%',#{operator_no},'%')
            </if>
            <if test="begin_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')>=DATE_FORMAT(#{begin_time},'%Y-%m-%d 00:00:00')]]>
            </if>
            <if test="end_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')<=DATE_FORMAT(#{end_time},'%Y-%m-%d 23:59:59')]]>
            </if>
        </where>
    </select>

</mapper>