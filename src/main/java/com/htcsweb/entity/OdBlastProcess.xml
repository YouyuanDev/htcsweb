<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.htcsweb.dao.OdBlastProcessDao">

    <insert id="addOdBlastProcess" parameterType="com.htcsweb.entity.OdBlastProcess">
            INSERT INTO od_blast_process(pipe_no,operation_time,operator_no,surface_condition,salt_contamination_before_blasting,alkaline_dwell_time,alkaline_concentration,abrasive_conductivity,acid_wash_time,acid_concentration,blast_line_speed,upload_files,preheat_temp,remark,result,mill_no,marking,rinse_water_conductivity) VALUES (#{pipe_no},#{operation_time},#{operator_no},#{surface_condition},#{salt_contamination_before_blasting},#{alkaline_dwell_time},#{alkaline_concentration},#{abrasive_conductivity},#{acid_wash_time},#{acid_concentration},#{blast_line_speed},#{upload_files},#{preheat_temp},#{remark},#{result},#{mill_no},#{marking},#{rinse_water_conductivity})
    </insert>
    <delete id="delOdBlastProcess">
        delete from od_blast_process WHERE
        <foreach collection="array" item="item" open="id in (" separator="," close=")">
           #{item}
        </foreach>
    </delete>
    <select id="getOdBlastProcess" resultType="com.htcsweb.entity.OdBlastProcess">
        SELECT * from od_blast_process
    </select>

    <update id="updateOdBlastProcess" parameterType="com.htcsweb.entity.OdBlastProcess">
        UPDATE od_blast_process set pipe_no=#{pipe_no},operation_time=#{operation_time},operator_no=#{operator_no},surface_condition=#{surface_condition},salt_contamination_before_blasting=#{salt_contamination_before_blasting},alkaline_dwell_time=#{alkaline_dwell_time},alkaline_concentration=#{alkaline_concentration},abrasive_conductivity=#{abrasive_conductivity},acid_wash_time=#{acid_wash_time},acid_concentration=#{acid_concentration},blast_line_speed=#{blast_line_speed},upload_files=#{upload_files},preheat_temp=#{preheat_temp},remark=#{remark},result=#{result},mill_no=#{mill_no},marking=#{marking},rinse_water_conductivity=#{rinse_water_conductivity} WHERE id=#{id}
    </update>


    <select id="getCount" resultType="int">
        select count(*) from od_blast_process
    </select>

    <resultMap id="all" type="com.htcsweb.entity.OdBlastProcess">
        <id property="id" column="id"></id>
        <result property="project_name" column="project_name"></result>
        <result property="status_name" column="status_name"></result>
        <result property="pipe_no" column="pipe_no"></result>
        <result property="operation_time" column="operation_time"></result>
        <result property="operator_no" column="operator_no"></result>
        <result property="surface_condition" column="surface_condition"></result>
        <result property="salt_contamination_before_blasting" column="salt_contamination_before_blasting"></result>
        <result property="alkaline_dwell_time" column="alkaline_dwell_time"></result>
        <result property="alkaline_concentration" column="alkaline_concentration"></result>
        <result property="abrasive_conductivity" column="abrasive_conductivity"></result>
        <result property="acid_wash_time" column="acid_wash_time"></result>
        <result property="acid_concentration" column="acid_concentration"></result>
        <result property="blast_line_speed" column="blast_line_speed"></result>
        <result property="upload_files" column="upload_files"></result>
        <result property="preheat_temp" column="preheat_temp"></result>
        <result property="remark" column="remark"></result>
        <result property="result" column="result"></result>
        <result property="mill_no" column="mill_no"></result>
        <result property="marking" column="marking"></result>
        <result property="rinse_water_conductivity" column="rinse_water_conductivity"></result>

    </resultMap>

    <select id="getAllByLike" resultMap="all"  resultType="com.htcsweb.entity.OdBlastProcess">
        select * FROM od_blast_process
        <where>
            <if test="pipe_no!=null and pipe_no!=''">
                AND pipe_no LIKE CONCAT('%',#{pipe_no},'%')
            </if>
            <if test="operator_no!=null and operator_no!=''">
                AND operator_no LIKE CONCAT('%',#{operator_no},'%')
            </if>
            <if test="begin_time!=null">
                <![CDATA[ AND DATE_FORMAT(operation_time,'%Y-%m-%d %H:%T:%s')>=DATE_FORMAT(#{begin_time},'%Y-%m-%d 00:00:00')]]>
            </if>
            <if test="end_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')<DATE_FORMAT(DATE_ADD(#{end_time},INTERVAL 1 DAY),'%Y-%m-%d 00:00:00')]]>
            </if>
        </where>
        limit #{skip},#{take}
    </select>
    <select id="getNewAllByLike" resultType="map">
        Select pro.project_name,s.status_name,p.contract_no,p.grade,p.od,p.wt,p.p_length,p.weight,p.heat_no,o.*
        from od_blast_process o
        left join pipe_basic_info p on p.pipe_no=o.pipe_no
        left join contract_info c on p.contract_no=c.contract_no
        left join project_info pro on c.project_no=pro.project_no
        left join pipe_status s on s.status_code=p.status
        <where>
            <if test="pipe_no!=null and pipe_no!=''">
                AND o.pipe_no LIKE CONCAT('%',#{pipe_no},'%')
            </if>
            <if test="operator_no!=null and operator_no!=''">
                AND o.operator_no LIKE CONCAT('%',#{operator_no},'%')
            </if>
            <if test="mill_no!=null and mill_no!=''">
                AND o.mill_no =#{mill_no}
            </if>
            <if test="begin_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')>=DATE_FORMAT(#{begin_time},'%Y-%m-%d 00:00:00')]]>
            </if>
            <if test="end_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')<DATE_FORMAT(DATE_ADD(#{end_time},INTERVAL 1 DAY),'%Y-%m-%d 00:00:00')]]>
            </if>
        </where>
        ORDER BY o.id DESC
        limit #{skip},#{take}
    </select>



    <select id="getCountNewAllByLike" resultType="int">
        select count(*) from od_blast_process o
        left join pipe_basic_info p on p.pipe_no=o.pipe_no
        left join contract_info c on p.contract_no=c.contract_no
        left join project_info pro on c.project_no=pro.project_no
        left join pipe_status s on s.status_code=p.status
        <where>
            <if test="pipe_no!=null and pipe_no!=''">
                AND o.pipe_no LIKE CONCAT('%',#{pipe_no},'%')
            </if>
            <if test="operator_no!=null and operator_no!=''">
                AND o.operator_no LIKE CONCAT('%',#{operator_no},'%')
            </if>
            <if test="mill_no!=null and mill_no!=''">
                AND o.mill_no =#{mill_no}
            </if>
            <if test="begin_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')>=DATE_FORMAT(#{begin_time},'%Y-%m-%d 00:00:00')]]>
            </if>
            <if test="end_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')<DATE_FORMAT(DATE_ADD(#{end_time},INTERVAL 1 DAY),'%Y-%m-%d 00:00:00')]]>
            </if>
        </where>
    </select>


    <select id="getOdBlastProcessById" parameterType="int" resultType="com.htcsweb.entity.OdBlastProcess">
        select * from od_blast_process where id=#{id}
    </select>

    <!--获取当天外打砂记录-->
    <select id="getOdBlastRecord" resultType="map">
        Select pro.project_name,pro.client_spec,pro.coating_standard,c.od,c.wt,c.external_coating,c.internal_coating,o.*
        from od_blast_process o
        left join pipe_basic_info p on p.pipe_no=o.pipe_no
        left join contract_info c on p.contract_no=c.contract_no
        left join project_info pro on c.project_no=pro.project_no
        <where>
            <if test="mill_no!=null and mill_no!=''">
                AND o.mill_no=#{mill_no}
            </if>
            <if test="project_no!=null and project_no!=''">
                AND pro.project_no=#{project_no}
            </if>
            <if test="external_coating!=null and external_coating!=''">
                AND c.external_coating=#{external_coating}
            </if>
            <if test="begin_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%i:%s')>=DATE_FORMAT(#{begin_time},'%Y-%m-%d %H:%i:%s')]]>
            </if>
            <if test="end_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%i:%s')<DATE_FORMAT(#{end_time},'%Y-%m-%d %H:%i:%s')]]>
            </if>
        </where>
        ORDER BY o.id DESC
    </select>


</mapper>