<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.htcsweb.dao.IdFinalInspectionProcessDao">


    <insert id="addIdFinalInProcess" parameterType="com.htcsweb.entity.IdFinalInspectionProcess">
        INSERT INTO id_final_inspection_process(pipe_no,operation_time,
        operator_no,od_inspection_result,final_inspection_result,
        upload_files,remark,result,mill_no,dry_film_thickness_list,cutback_length,
        stencil_verification,roughness_list,holiday_tester_volts,holidays,surface_condition,
        bevel_check,magnetism_list,internal_repairs) VALUES
        (#{pipe_no},#{operation_time},#{operator_no},#{od_inspection_result},
        #{final_inspection_result},#{upload_files},#{remark},
        #{result},#{mill_no},#{dry_film_thickness_list},#{cutback_length},#{stencil_verification},#{roughness_list},
        #{holiday_tester_volts},#{holidays},#{surface_condition},#{bevel_check},
        #{magnetism_list},#{internal_repairs})
    </insert>

    <update id="updateIdFinalInProcess" parameterType="com.htcsweb.entity.IdFinalInspectionProcess">
        UPDATE id_final_inspection_process set pipe_no=#{pipe_no},operation_time=#{operation_time},
        operator_no=#{operator_no},od_inspection_result=#{od_inspection_result},
        final_inspection_result=#{final_inspection_result},
        upload_files=#{upload_files},remark=#{remark},result=#{result},
        mill_no=#{mill_no},dry_film_thickness_list=#{dry_film_thickness_list},
        cutback_length=#{cutback_length},stencil_verification=#{stencil_verification},
        roughness_list=#{roughness_list},holiday_tester_volts=#{holiday_tester_volts},
        holidays=#{holidays},surface_condition=#{surface_condition},bevel_check=#{bevel_check},
        magnetism_list=#{magnetism_list},internal_repairs=#{internal_repairs}
        where id=#{id}
    </update>

    <delete id="delIdFinalInProcess">
        delete from id_final_inspection_process WHERE
        <foreach collection="array" item="item" open="id in (" separator="," close=")">
            #{item}
        </foreach>
    </delete>
    <select id="getCount" resultType="int">
        select count(*) from id_final_inspection_process
    </select>

    <select id="getCountAllByLike" resultType="int">
        select count(*) from id_final_inspection_process o
        left join pipe_basic_info p on p.pipe_no=o.pipe_no
        left join contract_info c on p.contract_no=c.contract_no
        left join project_info pro on c.project_no=pro.project_no
        left join pipe_status s on s.status_code=p.status
        <where>
            <if test="pipe_no!=null and pipe_no!=''">
                AND o.pipe_no LIKE CONCAT('%',#{pipe_no},'%')
            </if>
            <if test="operator_no!=null and operator_no!=''">
                AND o.operator_no LIKE CONCAT('%',#{operator_no},'%')
            </if>
            <if test="mill_no!=null and mill_no!=''">
                AND o.mill_no =#{mill_no}
            </if>
            <if test="begin_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')>=DATE_FORMAT(#{begin_time},'%Y-%m-%d 00:00:00')]]>
            </if>
            <if test="end_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')<=DATE_FORMAT(#{end_time},'%Y-%m-%d 23:59:59')]]>
            </if>
        </where>
    </select>

    <select id="getAllByLike" resultType="map">
        Select pro.project_name,s.status_name,p.contract_no,p.grade,p.od,p.wt,p.p_length,p.weight,p.heat_no,o.*
        from id_final_inspection_process o
        left join pipe_basic_info p on p.pipe_no=o.pipe_no
        left join contract_info c on p.contract_no=c.contract_no
        left join project_info pro on c.project_no=pro.project_no
        left join pipe_status s on s.status_code=p.status
        <where>
            <if test="pipe_no!=null and pipe_no!=''">
                AND o.pipe_no LIKE CONCAT('%',#{pipe_no},'%')
            </if>
            <if test="operator_no!=null and operator_no!=''">
                AND o.operator_no LIKE CONCAT('%',#{operator_no},'%')
            </if>
            <if test="mill_no!=null and mill_no!=''">
                AND o.mill_no =#{mill_no}
            </if>
            <if test="begin_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')>=DATE_FORMAT(#{begin_time},'%Y-%m-%d 00:00:00')]]>
            </if>
            <if test="end_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')<=DATE_FORMAT(#{end_time},'%Y-%m-%d 23:59:59')]]>
            </if>
        </where>
        ORDER BY o.id DESC
        limit #{skip},#{take}
    </select>


    <select id="getIdFinalInProcessById" parameterType="int" resultType="com.htcsweb.entity.IdFinalInspectionProcess">
        select * from id_final_inspection_process where id=#{id}
    </select>
</mapper>