<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.htcsweb.dao.RawMaterialTesting2FbeDao">

    <insert id="addRawMaterialTest2Fbe" parameterType="com.htcsweb.entity.RawMaterialTesting2Fbe">
      INSERT INTO raw_material_testing_2fbe(operator_no,project_no,operation_time,sample_no,raw_material,batch_no,density,particle_size_32um,particle_size_150um,dsc_tgi,dsc_tgf,dsc_delta_h,gel_time_lt_20s,gel_time_gt_20s,powder_volatile,foaming_cross_sectional,foaming_interfacial,impact,flexibility,hot_water,cd_65_24h,result,upload_files,remark) VALUES (#{operator_no},#{project_no},#{operation_time},#{sample_no},#{raw_material},#{batch_no},#{density},#{particle_size_32um},#{particle_size_150um},#{dsc_tgi},#{dsc_tgf},#{dsc_delta_h},#{gel_time_lt_20s},#{gel_time_gt_20s},#{powder_volatile},#{foaming_cross_sectional},#{foaming_interfacial},#{impact},#{flexibility},#{hot_water},#{cd_65_24h},#{result},#{upload_files},#{remark})
    </insert>
    <delete id="delRawMaterialTest2Fbe">
        delete from raw_material_testing_2fbe WHERE
        <foreach collection="array" item="item" open="id in (" separator="," close=")">
           #{item}
        </foreach>
    </delete>

    <update id="updateRawMaterialTest2Fbe" parameterType="com.htcsweb.entity.RawMaterialTesting2Fbe">
       UPDATE raw_material_testing_2fbe set operator_no=#{operator_no},project_no=#{project_no},operation_time=#{operation_time},sample_no=#{sample_no},raw_material=#{raw_material},batch_no=#{batch_no},density=#{density},particle_size_32um=#{particle_size_32um},particle_size_150um=#{particle_size_150um},dsc_tgi=#{dsc_tgi},dsc_tgf=#{dsc_tgf},dsc_delta_h=#{dsc_delta_h},gel_time_lt_20s=#{gel_time_lt_20s},gel_time_gt_20s=#{gel_time_gt_20s},powder_volatile=#{powder_volatile},foaming_cross_sectional=#{foaming_cross_sectional},foaming_interfacial=#{foaming_interfacial},impact=#{impact},flexibility=#{flexibility},hot_water=#{hot_water},cd_65_24h=#{cd_65_24h},result=#{result},upload_files=#{upload_files},remark=#{remark} where id=#{id}
    </update>


    <select id="getNewAllByLike" resultType="map">
        Select pro.project_name,o.*
        from raw_material_testing_2fbe o
        left join project_info pro on o.project_no=pro.project_no
        <where>
            <if test="project_no!=null and project_no!=''">
                AND o.project_no LIKE CONCAT('%',#{project_no},'%')
            </if>
            <if test="operator_no!=null and operator_no!=''">
                AND o.operator_no LIKE CONCAT('%',#{operator_no},'%')
            </if>
            <if test="begin_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')>=DATE_FORMAT(#{begin_time},'%Y-%m-%d 00:00:00')]]>
            </if>
            <if test="end_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')<DATE_FORMAT(DATE_ADD(#{end_time},INTERVAL 1 DAY),'%Y-%m-%d 00:00:00')]]>
            </if>
        </where>
        ORDER BY o.id DESC
        limit #{skip},#{take}
    </select>



    <select id="getCountNewAllByLike" resultType="int">
        select count(*) from raw_material_testing_2fbe o
        left join project_info pro on o.project_no=pro.project_no
        <where>
            <if test="project_no!=null and project_no!=''">
                AND o.project_no LIKE CONCAT('%',#{project_no},'%')
            </if>
            <if test="operator_no!=null and operator_no!=''">
                AND o.operator_no LIKE CONCAT('%',#{operator_no},'%')
            </if>
            <if test="end_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')<DATE_FORMAT(DATE_ADD(#{end_time},INTERVAL 1 DAY),'%Y-%m-%d 00:00:00')]]>
            </if>
            <if test="end_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')<DATE_FORMAT(DATE_ADD(#{end_time},INTERVAL 1 DAY),'%Y-%m-%d 00:00:00')]]>
            </if>
        </where>
    </select>

    <!--根据试样编号查询最新一条记录-->
    <select id="getRecentRecordBySampleNo" resultType="com.htcsweb.entity.RawMaterialTesting2Fbe">
        SELECT  * from raw_material_testing_2fbe where sample_no=#{sample_no} order by operation_time desc LIMIT 1
    </select>
    <!--根据id取出数据-->
    <select id="getRawMaterialTesting2FbeById" resultType="com.htcsweb.entity.RawMaterialTesting2Fbe">
        SELECT  * from raw_material_testing_2fbe where  id=#{id}
    </select>
</mapper>