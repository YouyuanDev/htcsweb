<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.htcsweb.dao.OdBlastInspectionProcessDao">


    <select id="getAllByLike" resultType="map">
        Select pro.project_name,s.status_name,p.contract_no,p.grade,p.od,p.wt,p.p_length,p.weight,p.heat_no,o.*
        from od_blast_inspection_process o
        left join pipe_basic_info p on p.pipe_no=o.pipe_no
        left join contract_info c on p.contract_no=c.contract_no
        left join project_info pro on c.project_no=pro.project_no
        left join pipe_status s on s.status_code=p.status
        <where>
            <if test="pipe_no!=null and pipe_no!=''">
                AND o.pipe_no LIKE CONCAT('%',#{pipe_no},'%')
            </if>
            <if test="operator_no!=null and operator_no!=''">
                AND o.operator_no LIKE CONCAT('%',#{operator_no},'%')
            </if>
            <if test="mill_no!=null and mill_no!=''">
                AND o.mill_no =#{mill_no}
            </if>
            <if test="begin_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')>=DATE_FORMAT(#{begin_time},'%Y-%m-%d 00:00:00')]]>
            </if>
            <if test="end_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')<=DATE_FORMAT(#{end_time},'%Y-%m-%d 23:59:59')]]>
            </if>
        </where>
        ORDER BY o.id DESC
        limit #{skip},#{take}
    </select>


    <select id="getCountAllByLike" resultType="int">
        select count(*) from od_blast_inspection_process o
        left join pipe_basic_info p on p.pipe_no=o.pipe_no
        left join contract_info c on p.contract_no=c.contract_no
        left join project_info pro on c.project_no=pro.project_no
        left join pipe_status s on s.status_code=p.status
        <where>
            <if test="pipe_no!=null and pipe_no!=''">
                AND o.pipe_no LIKE CONCAT('%',#{pipe_no},'%')
            </if>
            <if test="operator_no!=null and operator_no!=''">
                AND o.operator_no LIKE CONCAT('%',#{operator_no},'%')
            </if>
            <if test="mill_no!=null and mill_no!=''">
                AND o.mill_no =#{mill_no}
            </if>
            <if test="begin_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')>=DATE_FORMAT(#{begin_time},'%Y-%m-%d 00:00:00')]]>
            </if>
            <if test="end_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')<=DATE_FORMAT(#{end_time},'%Y-%m-%d 23:59:59')]]>
            </if>
        </where>

    </select>


    <insert id="addOdBlastInProcess" parameterType="com.htcsweb.entity.OdBlastInspectionProcess">
        INSERT INTO od_blast_inspection_process(pipe_no,operation_time,operator_no,air_temp,relative_humidity,dew_point,blast_finish_sa25,profile,surface_dust_rating,pipe_temp,salt_contamination_after_blasting,surface_condition,upload_files,remark,result,mill_no) VALUES (#{pipe_no},#{operation_time},#{operator_no},#{air_temp},#{relative_humidity},#{dew_point},#{blast_finish_sa25},#{profile},#{surface_dust_rating},#{pipe_temp},#{salt_contamination_after_blasting},#{surface_condition},#{upload_files},#{remark},#{result},#{mill_no})
    </insert>

    <select id="getOdBlastInProcess" resultType="com.htcsweb.entity.OdBlastInspectionProcess">
        SELECT * from od_blast_inspection_process
    </select>

    <update id="updateOdBlastInProcess" parameterType="com.htcsweb.entity.OdBlastInspectionProcess">
        UPDATE od_blast_inspection_process set pipe_no=#{pipe_no},operation_time=#{operation_time},operator_no=#{operator_no},air_temp=#{air_temp},relative_humidity=#{relative_humidity},dew_point=#{dew_point},blast_finish_sa25=#{blast_finish_sa25},profile=#{profile},surface_dust_rating=#{surface_dust_rating},pipe_temp=#{pipe_temp},salt_contamination_after_blasting=#{salt_contamination_after_blasting},surface_condition=#{surface_condition},upload_files=#{upload_files},remark=#{remark},result=#{result},mill_no=#{mill_no} where id=#{id}
    </update>


    <select id="getCount" resultType="int">
        select count(*) from od_blast_inspection_process
    </select>

    <resultMap id="all" type="com.htcsweb.entity.OdBlastInspectionProcess">
        <id property="id" column="id"></id>
        <result property="pipe_no" column="pipe_no"></result>
        <result property="operation_time" column="operation_time"></result>
        <result property="operator_no" column="operator_no"></result>
        <result property="air_temp" column="air_temp"></result>
        <result property="relative_humidity" column="relative_humidity"></result>
        <result property="dew_point" column="dew_point"></result>
        <result property="blast_finish_sa25" column="blast_finish_sa25"></result>
        <result property="profile" column="profile"></result>
        <result property="surface_dust_rating" column="surface_dust_rating"></result>
        <result property="pipe_temp" column="pipe_temp"></result>
        <result property="salt_contamination_after_blasting" column="salt_contamination_after_blasting"></result>
        <result property="surface_condition" column="surface_condition"></result>
        <result property="upload_files" column="upload_files"></result>
        <result property="remark" column="remark"></result>
        <result property="result" column="result"></result>
        <result property="mill_no" column="mill_no"></result>

    </resultMap>

    <select id="feny"  resultMap="all">
        select * from od_blast_inspection_process where id limit #{arg0},#{arg1}
    </select>

    <select id="getOdBlastInProcessById" parameterType="int" resultType="com.htcsweb.entity.OdBlastInspectionProcess">
        select * from od_blast_inspection_process where id=#{id}
    </select>

    <delete id="delOdBlastInspectionProcess">
        delete from od_blast_inspection_process WHERE
        <foreach collection="array" item="item" open="id in (" separator="," close=")">
            #{item}
        </foreach>
    </delete>



</mapper>