<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.htcsweb.dao.OdCoatingProcessDao">


    <insert id="addOdCoatingProcess" useGeneratedKeys="true" keyProperty="id" parameterType="com.htcsweb.entity.OdCoatingProcess">
    INSERT INTO od_coating_2fbe_process(pipe_no,operation_time,operator_no,coating_line_speed,base_coat_used,base_coat_lot_no,top_coat_used,top_coat_lot_no,base_coat_gun_count,top_coat_gun_count,application_temp,to_first_touch_duration,to_quench_duration,upload_files,remark,result,mill_no,air_pressure,coating_voltage,gun_distance,spray_speed,application_voltage) VALUES (#{pipe_no},#{operation_time},#{operator_no},#{coating_line_speed},#{base_coat_used},#{base_coat_lot_no},#{top_coat_used},#{top_coat_lot_no},#{base_coat_gun_count},#{top_coat_gun_count},#{application_temp},#{to_first_touch_duration},#{to_quench_duration},#{upload_files},#{remark},#{result},#{mill_no},#{air_pressure},#{coating_voltage},#{gun_distance},#{spray_speed},#{application_voltage})
    </insert>

    <update id="updateOdCoatingProcess" parameterType="com.htcsweb.entity.OdCoatingProcess">
    UPDATE od_coating_2fbe_process set pipe_no=#{pipe_no},operation_time=#{operation_time},operator_no=#{operator_no},coating_line_speed=#{coating_line_speed},base_coat_used=#{base_coat_used},base_coat_lot_no=#{base_coat_lot_no},top_coat_used=#{top_coat_used},top_coat_lot_no=#{top_coat_lot_no},base_coat_gun_count=#{base_coat_gun_count},top_coat_gun_count=#{top_coat_gun_count},application_temp=#{application_temp},to_first_touch_duration=#{to_first_touch_duration},to_quench_duration=#{to_quench_duration},upload_files=#{upload_files},remark=#{remark},result=#{result},mill_no=#{mill_no},air_pressure=#{air_pressure},coating_voltage=#{coating_voltage},gun_distance=#{gun_distance},spray_speed=#{spray_speed},application_voltage=#{application_voltage} where id=#{id}
    </update>

    <delete id="delOdCoatingProcess">
        delete from od_coating_2fbe_process WHERE
        <foreach collection="array" item="item" open="id in (" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <select id="getCount" resultType="int">
        select count(*) from od_coating_2fbe_process
    </select>


    <select id="getCountAllByLike" resultType="int">
        select count(*) from od_coating_2fbe_process o
        left join pipe_basic_info p on p.pipe_no=o.pipe_no
        left join contract_info c on p.contract_no=c.contract_no
        left join project_info pro on c.project_no=pro.project_no
        left join pipe_status s on s.status_code=p.status
        <where>
            <if test="pipe_no!=null and pipe_no!=''">
                AND o.pipe_no LIKE CONCAT('%',#{pipe_no},'%')
            </if>
            <if test="operator_no!=null and operator_no!=''">
                AND o.operator_no LIKE CONCAT('%',#{operator_no},'%')
            </if>
            <if test="mill_no!=null and mill_no!=''">
                AND o.mill_no =#{mill_no}
            </if>
            <if test="begin_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')>=DATE_FORMAT(#{begin_time},'%Y-%m-%d 00:00:00')]]>
            </if>
            <if test="end_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')<DATE_FORMAT(DATE_ADD(#{end_time},INTERVAL 1 DAY),'%Y-%m-%d 00:00:00')]]>
            </if>
        </where>

    </select>


    <select id="getAllByLike" resultType="map">
        Select pro.project_name,s.status_name,p.contract_no,p.grade,p.od,p.wt,p.p_length,p.weight,p.heat_no,o.*
        from od_coating_2fbe_process o
        left join pipe_basic_info p on p.pipe_no=o.pipe_no
        left join contract_info c on p.contract_no=c.contract_no
        left join project_info pro on c.project_no=pro.project_no
        left join pipe_status s on s.status_code=p.status
        <where>
            <if test="pipe_no!=null and pipe_no!=''">
                AND o.pipe_no LIKE CONCAT('%',#{pipe_no},'%')
            </if>
            <if test="operator_no!=null and operator_no!=''">
                AND o.operator_no LIKE CONCAT('%',#{operator_no},'%')
            </if>
            <if test="mill_no!=null and mill_no!=''">
                AND o.mill_no =#{mill_no}
            </if>
            <if test="begin_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')>=DATE_FORMAT(#{begin_time},'%Y-%m-%d 00:00:00')]]>
            </if>
            <if test="end_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%T:%s')<DATE_FORMAT(DATE_ADD(#{end_time},INTERVAL 1 DAY),'%Y-%m-%d 00:00:00')]]>
            </if>
        </where>
        ORDER BY o.id DESC
        limit #{skip},#{take}
    </select>





    <select id="getOdCoatingProcessById" parameterType="int" resultType="com.htcsweb.entity.OdCoatingProcess">
        select * from od_coating_2fbe_process where id=#{id}
    </select>

    <!--获取当天2FBE外涂记录-->
    <select id="getOd2FBECoatRecord" resultType="map">
        Select  o.*
        from od_coating_2fbe_process o
        left join pipe_basic_info p on p.pipe_no=o.pipe_no
        left join contract_info c on p.contract_no=c.contract_no
        left join project_info pro on c.project_no=pro.project_no
        WHERE pro.project_no=#{project_no} AND o.mill_no=#{mill_no}
        AND format(c.od,3)=format(#{od},3)
        AND format(c.wt,3)=format(#{wt},3)
        <if test="begin_time!=null">
            <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%i:%s')>=DATE_FORMAT(#{begin_time},'%Y-%m-%d %H:%i:%s')]]>
        </if>
        <if test="end_time!=null">
            <![CDATA[ AND DATE_FORMAT(o.operation_time,'%Y-%m-%d %H:%i:%s')<DATE_FORMAT(#{end_time},'%Y-%m-%d %H:%i:%s')]]>
        </if>
        ORDER BY o.id DESC
    </select>
